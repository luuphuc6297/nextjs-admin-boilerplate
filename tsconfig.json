{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",

        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        

        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "preserve",
        
        "isolatedModules": true,
        "incremental": true,

        "baseUrl": ".",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@/public/*": ["./public/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "declaration.d.ts"],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx", "cypress/**/*.ts"]
}
